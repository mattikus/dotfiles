# vim: set ft=gitconfig:
[core]
    excludesfile = ~/.gitignore_global
    autoclrf = input
    safeclrf = true

[github]
    user = mattikus

[user]
    # email can be overridden with $EMAIL envvar
    email = matt@mattikus.com
    name = Matt Kemp

[color]
    ui = auto

[alias]
    st = status -s
    ci = commit
    co = checkout
    amend = commit --amend -C HEAD
    undo = reset --soft HEAD^
    count = shortlog -sn
    nst = !PAGER=cat git diff --name-status
    graph = log --oneline --graph
    sr = svn rebase
    sd = svn dcommit
    tags = tag -l
    branches = branch -a
    remotes = remote -v

[branch]
    autosetupmerge = always
    autosetuprebase = always

[help]
    autocorrect = 1

[push]
    default = tracking

[rerere]
    enabled = true

[merge]
	conflictstyle = diff3
