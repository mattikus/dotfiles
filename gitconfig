[core]
    excludesfile = /Users/matt/.gitignore_global
    autoclrf = input
    safeclrf = true

[github]
    user = mattikus

[user]
    email = mkemp@alcf.anl.gov
    name = Matt Kemp

[color]
    ui = auto

[alias]
    st = status -sb
    ci = commit
    co = checkout
    amend = commit --amend -C HEAD
    undo = reset --soft HEAD^
    count = shortlog -sn
    nst = !PAGER=cat git diff --name-status
    graph = log --oneline --graph
    sr = svn rebase
    sd = svn dcommit

[branch]
    autosetupmerge = always
    autosetuprebase = always

[help]
    autocorrect = 1

[push]
    default = tracking

[rerere]
    enabled = true

