# conky configuration

# set to yes if you want Conky to be forked in the background
background no
out_to_console yes
update_interval 1.0
total_run_times 0
use_spacer none

TEXT
^fg(green)${exec wmctrl -d | awk '/\*/ { print $NF }'} ^fg():: [cpu ${cpu cpu0}% ${loadavg}] [mem ${mem}] [${uptime}] [net ${downspeedf}/${upspeedf}] [/ ${fs_used /}:${fs_size /}] [/home ${fs_used /home}:${fs_size /home}] 
