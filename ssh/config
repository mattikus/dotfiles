### Defaults ###
host *
  ControlPath ~/.ssh/master-%r@%h:%p
  ForwardAgent yes
################

###vps###
host vps
  HostName mattikus.com
  User matt
  Port 64000
  ControlMaster auto
  ForwardAgent yes
################

###Home Machines###
host balthazar bal
  User matt
  forwardX11trusted yes
  PermitLocalCommand yes
  ControlMaster auto
  ForwardAgent yes

host home mattik.us
  User matt
  HostName mattik.us
  Port 64000
  ControlMaster auto
  ForwardAgent yes
##################

##ANL##
host *.anl.gov
  User mkemp

host cata
  HostName catapult.pub.alcf.anl.gov
  ControlMaster auto
  ForwardX11Trusted yes
  User mkemp
  ForwardAgent yes

host treb
  HostName trebuchet.pub.alcf.anl.gov
  ControlMaster auto
  User mkemp
  ForwardAgent yes

host login.mcs login?.mcs login?.mcs.anl.gov
  hostname login.mcs.anl.gov
  User mkemp
  ForwardAgent yes

host gitlab_proxy
  User git
  ProxyCommand ssh -A treb nc swerve %p

host jlse
  User mkemp
  ControlMaster auto
  HostName ftlogin1.pub.jlse.anl.gov

host albatross ftsn1
    user mkemp
    ProxyCommand ssh -A jlse nc %h %p

