### Defaults ###
host *
  ControlPath ~/.ssh/master-%r@%h:%p
  ForwardAgent yes
################

###vps###
host vps
  HostName mattikus.com
  User matt
  Port 64000
  ControlMaster auto

host vps-proxy
  HostName mattikus.com
  User matt
  Port 64000
  DynamicForward 9090
################

###Home Machines###
host balthazar
  User matt
  forwardX11trusted yes
  PermitLocalCommand yes

host home
   User matt
   HostName mattik.us
   Port 64000
##################

##ANL##
host *.anl.gov
  User mkemp

host cetus veas
  HostName %h.alcf.anl.gov
  User mkemp

host cata
  HostName catapult.pub.alcf.anl.gov
  ControlMaster auto
  ForwardX11Trusted yes
  User mkemp

host treb
  HostName trebuchet.pub.alcf.anl.gov
  ControlMaster auto
  User mkemp

host login?.mcs login?.mcs.anl.gov
  User mkemp

host harvey harvey.surveyor harvey.surveyor.alcf.anl.gov
  HostName harvey.surveyor.alcf.anl.gov
  User mkemp

host mgt1 mgt1.ether mgt1.ether.alcf.anl.gov
  HostName mgt1.ether.alcf.anl.gov
  ControlMaster auto
  User mkemp

host mgt2 mgt2.ether mgt2.ether.alcf.anl.gov
  HostName mgt2.ether.alcf.anl.gov
  User mkemp

host namby namby.mcs namby.mcs.anl.gov
  HostName namby.mcs.anl.gov
  User mkemp

host status
  User mkemp
  ProxyCommand ssh -A namby netcat status.alcf.anl.gov %p

host login8.surveyor login8.surveyor.alcf.anl.gov
  HostName login8.surveyor.alcf.anl.gov
  User mkemp

host login10.intrepid login10.intrepid.alcf.anl.gov
  HostName login10.intrepid.alcf.anl.gov
  User mkemp
######

### no.de ###
host foobar foobar.no.de
  HostName foobar.no.de
  User node
#############

Host *+*
  ProxyCommand ssh $(echo %h | sed 's/+[^+]*$//;s/\([^+%%]*\)%%\([^+]*\)$/\2 -l \1/;s/:/ -p /') PATH=.:\$PATH nc -w10 $(echo %h | sed 's/^.*+//;/:/!s/$/ %p/;s/:/ /')

host swerve swerve.fst swerve.fst.alcf.anl.gov
  hostname swerve.fst.alcf.anl.gov
  user mkemp

